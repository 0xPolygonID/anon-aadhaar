{
  "name": "country-identity-packages",
  "version": "0.0.7",
  "description": "A set of tools to anonymously prove your identity",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build:libraries": "yarn workspaces run build",
    "test-publish:libraries": "yarn workspaces run test-publish",
    "publish:libraries": "yarn workspaces run publish",
    "test:libraries": "yarn workspaces run test",
    "dev-setup:pcd": "yarn workspace pcd-country-identity run dev-setup",
    "pdf:pcd": "yarn workspace pcd-country-identity run gen-pdf",
    "contracts:pcd": "yarn workspace pcd-country-identity run contract",
    "dev-install:pcd": "yarn workspace pcd-country-identity run dev-install",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "husky install",
    "version:pcd-country-identity": "cd packages/pcd-country-identity && yarn version --new-version $npm_package_version",
    "version:country-identity-kit": "cd packages/country-identity-kit && yarn version --new-version $npm_package_version",
    "version:country-identity-contracts": "cd packages/country-identity-contracts && yarn version --new-version $npm_package_version",
    "postversion": "yarn version:pcd-country-identity && yarn version:country-identity-kit && yarn version:country-identity-contracts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/privacy-scaling-explorations/anon-aadhaar.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/circomlib"
    ]
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/privacy-scaling-explorations/anon-aadhaar/issues"
  },
  "homepage": "https://github.com/privacy-scaling-explorations/anon-aadhaar#readme"
}
